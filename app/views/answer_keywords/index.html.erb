<p id="notice"><%= notice %></p>

<h1>Listing Answer Keywords</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Case sensitive</th>
      <th>Order</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answer_keywords.each do |answer_keyword| %>
      <tr>
        <td><%= answer_keyword.text %></td>
        <td><%= answer_keyword.case_sensitive %></td>
        <td><%= answer_keyword.order %></td>
        <td><%= answer_keyword.question.id %></td>
        <td><%= link_to 'Show', answer_keyword %></td>
        <td><%= link_to 'Edit', edit_answer_keyword_path(answer_keyword) %></td>
        <td><%= link_to 'Destroy', answer_keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

